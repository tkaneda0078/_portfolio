{% extends 'base.html.twig' %}

{% block body %}

    {% include('Components/navbar.html.twig') %}

    <header class="main-header">
        <div class="header-container">
            <div class="header-content text-left content">
                <h1>Contact</h1>
            </div>
        </div>
    </header>

    <main class="main-container">
        <section class="contact">
            <div class="contact-container">
                <div class="contact-content mb-4">
                    <div class="mb-5">
                        <p>制作の依頼・ご相談などお気軽にお問い合わせくださいませ。</p>
                    </div>
                    {{ form_start(form, {'action': path('contact_send'), 'method': 'POST'}) }}
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                {{ form_row(form.detail) }}
                            </div>
                        </div>
                        <div class="text-right">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </main>

    {% include('Components/Footer/sub.html.twig') %}

{% endblock %}